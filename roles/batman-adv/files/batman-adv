auto eth0
allow-hotplug eth0
iface eth0 inet manual

auto wlan1
iface wlan1 inet manual
#    wireless-channel auto
#    wireless-essid SFTL_AHMesh
#    wireless-mode ad-hoc
#    wireless-key 1234567890
#    wpa-driver nl80211
    wpa-conf /etc/wpa_supplicant/wpa-adhoc.conf    

auto bat0
iface bat0 inet manual
    mtu 1468
    pre-up /usr/sbin/batctl if add wlan1
    #pre-up /usr/sbin/ifconfig bat0 mtu 1468
    pre-up /usr/sbin/batctl gw_mode client

auto br0
iface br0 inet dhcp
    bridge_ports bat0 eth0
